<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="345dp"
        android:layout_centerHorizontal="true"
        android:layout_height="90dp"
        android:layout_marginTop="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/txt_team_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/test_sample"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:textSize="16sp"
                android:textColor="@color/text_black"/>
            <View
                android:id="@+id/view_deliver"
                android:layout_width="250dp"
                android:layout_height="1dp"
                android:background="@color/bg_black"
                android:layout_marginLeft="30dp"
                android:layout_below="@id/txt_team_name"/>
            <TextView
                android:id="@+id/txt_contest_name"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:text="@string/test_sample"
                android:layout_below="@id/view_deliver"
                android:layout_marginTop="3dp"
                android:layout_alignLeft="@id/view_deliver"
                android:layout_marginLeft="5dp"
                android:paddingBottom="2dp"
                android:background="@drawable/bg_btn"
                android:textColor="@color/gray"
                android:paddingLeft="3dp"
                />
            <ImageView
                android:id="@+id/img_want"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_find"
                android:layout_marginTop="3dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="130dp"
                android:layout_alignTop="@id/txt_contest_name"
                />
            <TextView
                android:id="@+id/txt_want"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/test_sample"
                android:textColor="@color/text_warning"
                android:layout_marginLeft="220dp"
                android:layout_marginRight="10dp"
                android:layout_alignTop="@id/img_want"
                android:textSize="11sp"
                />
            <TextView
                android:id="@+id/txt_declaration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/test_sample"
                android:textColor="@color/text_gray"
                android:layout_below="@id/img_want"
                android:layout_marginTop="5dp"
                android:layout_alignLeft="@id/txt_contest_name"
                android:layout_marginLeft="5dp"/>

        </RelativeLayout>



    </android.support.v7.widget.CardView>

</RelativeLayout>